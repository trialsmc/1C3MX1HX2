local function switchTab(tab)
	if currentTab == tab then return end
	currentTab = tab

	content:ClearAllChildren()
	content.Position = UDim2.new(0, 0, 0, 90)
	content.Visible = true

	if tab == "Home" then
		local label = Instance.new("TextLabel", content)
		label.Size = UDim2.new(1, -40, 1, -20)
		label.Position = UDim2.new(0, 20, 0, 10)
		label.BackgroundTransparency = 1
		label.TextColor3 = Color3.fromRGB(255, 255, 255)
		label.Font = Enum.Font.Gotham
		label.TextSize = 16
		label.TextWrapped = true
		label.Text = "Hexagon Ui Lib: A Updated version of Hexagon by Roun95 (Nova)"
	else
		for i, data in ipairs(tabContents[tab]) do
			local name, code = unpack(data)
			local b = Instance.new("TextButton", content)
			b.Size = UDim2.new(0, 200, 0, 25)
			b.Position = UDim2.new(0, 20, 0, (i - 1) * 40)
			b.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
			b.TextColor3 = Color3.fromRGB(255, 255, 255)
			b.Text = name
			b.Font = Enum.Font.Gotham
			b.TextSize = 14
			Instance.new("UICorner", b).CornerRadius = UDim.new(0, 6)
			b.MouseButton1Click:Connect(function()
				loadstring(code)()
			end)
		end
	end
	
	for tName, tBtn in pairs(tabButtons) do
		if tName == tab then
			tBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 70) -- Active
		else
			tBtn.BackgroundColor3 = Color3.fromRGB(35, 35, 35) -- Inactive
		end
	end
end

for tab, btn in pairs(tabButtons) do
	btn.MouseButton1Click:Connect(function()
		switchTab(tab)
	end)
end

switchTab("Home")
